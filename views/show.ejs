<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Document</title>
    <!-- <link rel="stylesheet" href="style.css"> -->
    <style>
      * {
        margin: 0;
        padding: 0;
      }

      /* Font imported */
      @import url("https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Yanone+Kaffeesatz:wght@300&display=swap");

      h1 {
        text-align: center;
      }
      .main {
        /* border: 2px solid black; */
		
        display: flex;
        height: 80vh;
        width: 90vh;
        margin: 0 auto;
      }

      .container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
        justify-content: center;
        align-content: center;
        align-items: center;
        grid-auto-flow: column;
        text-align: center;
        height: 10%;
        width: 95%;
        justify-content: space-around;
        /* border: 2px solid red; */
        padding: 4px;
        padding-top: 4px;
        /* margin-top: 38px; */
        border-bottom: 1px solid #8080801a;
        /* text-align: center; */
        transition: transform 250ms;
        font-weight: bold;
      }

      /* container hover */
      .container:hover {
        background-color: #ffffff;
        transform: translateY(-10px);
      }

      .pic {
        float: left;
      }

      .attended {
        text-align: end;

        grid-column: 5/-1;
      }
      .container img {
        /* padding: auto; */

        height: 50px;
        width: 50px;
        border-radius: 50%;
        /* vertical-align: middle;
		 display: inline-block; */
      }
      .list {
        font-family: "Lato", sans-serif;
        font-family: "Yanone Kaffeesatz", sans-serif;
        font-size: smaller;

        /* border: 2px solid yellow; */
        width: 40%;
        overflow-x: hidden;
        background-color: #f8f8ff;
      }

      .list::-webkit-scrollbar {
        display: none;
      }

      .img img {
        height: 18vh;
        width: 18vh;
        /* border: 1px solid red; */
        display: block;
        margin-left: auto;
        margin-right: auto;
        border-radius: 50%;
      }
      /* full details image box */
      /*.img {
        /* border: 1px solid green; 
      } */
      .points {
        display: flex;
        justify-content: space-evenly;
        /* border: 1px solid red; */
        height: 15%;
        font-size: larger;
      }
      .name {
        text-align: center;
      }

      .subhead {
        font-family: "Lato", sans-serif;
        font-family: "Yanone Kaffeesatz", sans-serif;
        font-size: 2vh;
        display: flex;
        width: 99%;
        height: 4vh;
        border: 2px solid red;
        justify-content: center;
        align-items: center;
      }

      /* PROFILE */
      .profile {
        background-color: #eeeeff;
        padding-top: 15%;
        width: 60%;
      }

      .profile .name {
        padding-top: 2vh;
        padding-bottom: 2vh;
        font-size: 3vh;
      }

	  .profile .points {
		padding-top: 5vh;
		font-size: 7vh;
	  }
    </style>
  </head>
  <body>
    <h1>HEADING</h1>

	

	
    <div class="main">

      <div class="profile">
        <div class="img"><img src="<%= json[0].pic %>" /></div>
        <div class="name">Alex</div>
        <div class="points">
          <div>H</div>
          <div>E</div>
          <div>L</div>
        </div>
      </div>

      <div class="list">
        <div class="subhead">
          <h5>Overall Positions</h5>
        </div>
        <% json.forEach((json)=> { %>
        <div class="container">
          <span><%= json.id %>.</span>
          <img src="<%= json.pic %>" />
          <span class="names"><%= json.name %></span>
          <span class="attended"><%= json.classes %> Pts</span>
        </div>
        <% }) %>
      </div>
    </div>
  </body>

  <script>
    console.log("hello")
    let profile = document.querySelector(".img img")
    let name = document.querySelector(".name")
    let p1 = document.querySelector(".points div:nth-of-type(1)")
    let p2 = document.querySelector(".points div:nth-of-type(2)")
    let p3 = document.querySelector(".points div:nth-of-type(3)")

    console.log(profile, name, p1, p2, p3)

    let element = document.getElementsByClassName("container")
    /* console.log(element); */
    for (let i = 0; i < element.length; i++) {
      element[i].addEventListener("click", () => {
        name.innerText = element[i].children[2].innerText
        profile.src = element[i].children[1].src
        p1.innerText = element[i].children[0].innerText
        p2.innerText = element[i].children[0].innerText
      })
    }
  </script>
</html>
